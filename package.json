{
  "name": "motoko-mission-control",
  "version": "2.0.0",
  "private": true,
  "description": "Next-generation AI agent orchestration platform",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "start": "concurrently -n convex,web -c cyan,green \"pnpm db:dev\" \"pnpm web:dev\"",
    "start:win": "concurrently -n convex,web -c cyan,green \"pnpm db:dev\" \"pnpm web:dev\"",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rimraf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "db:dev": "pnpm --filter @motoko/db db:dev",
    "db:deploy": "pnpm --filter @motoko/db db:deploy",
    "db:seed": "pnpm --filter @motoko/db db:seed",
    "smoke:convex": "node tooling/smoke/convex-query-smoke.mjs",
    "smoke:elegant": "node tooling/smoke/convex-query-smoke.mjs --url https://elegant-chipmunk-882.convex.cloud",
    "smoke:dispatch": "node tooling/smoke/dispatch-flow-smoke.mjs",
    "smoke:dispatch:elegant": "node tooling/smoke/dispatch-flow-smoke.mjs --url https://elegant-chipmunk-882.convex.cloud",
    "runtime:start": "pnpm --filter @motoko/cli build && node apps/cli/dist/index.js runtime start",
    "runtime:start:elegant": "pnpm --filter @motoko/cli build && node apps/cli/dist/index.js runtime start --url https://elegant-chipmunk-882.convex.cloud",
    "openclaw:sync-agents": "pnpm --filter @motoko/cli build && node apps/cli/dist/index.js runtime sync-agents --url https://elegant-chipmunk-882.convex.cloud",
    "stack:elegant": "concurrently -n web,runtime -c green,magenta \"pnpm web:dev\" \"pnpm runtime:start:elegant\"",
    "web:dev": "pnpm --filter @motoko/web dev",
    "cli": "pnpm --filter @motoko/cli",
    "web": "pnpm --filter @motoko/web"
  },
  "devDependencies": {
    "@turbo/gen": "^2.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.23.0",
    "globals": "^16.4.0",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "turbo": "^2.0.0",
    "typescript-eslint": "^8.26.1",
    "typescript": "^5.4.0"
  },
  "packageManager": "pnpm@10.29.3",
  "engines": {
    "node": ">=20.0.0"
  }
}
