{
  "name": "@motoko/core",
  "version": "2.0.0",
  "description": "Core types, utilities, and constants for Motoko Mission Control",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@motoko/eslint-config": "workspace:*",
    "@motoko/typescript-config": "workspace:*",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0"
  }
}
