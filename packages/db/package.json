{
  "name": "@motoko/db",
  "version": "2.0.0",
  "description": "Database schema and Convex client for Motoko Mission Control",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:dev": "convex dev",
    "db:deploy": "convex deploy",
    "db:seed": "convex run seed:seed"
  },
  "dependencies": {
    "@motoko/core": "workspace:*",
    "convex": "^1.31.7"
  },
  "devDependencies": {
    "@motoko/eslint-config": "workspace:*",
    "@motoko/typescript-config": "workspace:*",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0"
  }
}
